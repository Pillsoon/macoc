---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | Musical Arts Competition of Orange County">
	<style>
		/* Enhanced Contact Page Styles */
		.contact-hero {
			background: linear-gradient(135deg, rgba(155, 89, 182, 0.9), rgba(142, 68, 173, 0.8)), 
			           url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400"><rect fill="%23f8f9fa" width="1200" height="400"/><path fill="%23e9ecef" d="M0 300h1200v100H0z"/><circle fill="%23dee2e6" cx="200" cy="100" r="60"/><circle fill="%23dee2e6" cx="600" cy="150" r="45"/><circle fill="%23dee2e6" cx="1000" cy="120" r="55"/><rect fill="%23adb5bd" x="100" y="250" width="1000" height="15" rx="8"/></svg>');
			background-size: cover;
			background-position: center;
			color: white;
			text-align: center;
			padding: 3rem 2rem;
			margin: -2rem -2rem 2rem -2rem;
			border-radius: 0;
		}

		.contact-hero h1 {
			font-size: clamp(2rem, 5vw, 3rem);
			font-weight: 300;
			margin-bottom: 1rem;
			text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
			color: white;
		}

		.contact-hero p {
			font-size: clamp(1rem, 3vw, 1.2rem);
			margin-bottom: 2rem;
			opacity: 0.95;
			max-width: 600px;
			margin-left: auto;
			margin-right: auto;
		}

		.hero-contact-methods {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 1.5rem;
			margin-top: 2rem;
			max-width: 800px;
			margin-left: auto;
			margin-right: auto;
		}

		.hero-method {
			background: rgba(255,255,255,0.1);
			padding: 1.5rem;
			border-radius: 15px;
			backdrop-filter: blur(10px);
			border: 1px solid rgba(255,255,255,0.2);
			text-align: center;
		}

		.method-icon {
			font-size: 2rem;
			margin-bottom: 0.5rem;
			display: block;
		}

		.method-title {
			font-weight: 600;
			margin-bottom: 0.5rem;
		}

		.method-detail {
			font-size: 0.9rem;
			opacity: 0.9;
		}



		/* Content container - ensure minimum height */
		.contact-container {
			min-height: calc(100vh - 350px);
			padding: 2rem 0;
		}

		/* Contact Information Cards */
		.contact-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
			gap: 2rem;
			margin: 2rem 0;
		}

		.contact-card {
			background: white;
			border-radius: 15px;
			padding: 2rem;
			box-shadow: 0 4px 20px rgba(0,0,0,0.08);
			border: 1px solid #f0f0f0;
			transition: all 0.3s ease;
			position: relative;
			overflow: hidden;
		}

		.contact-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 4px;
			background: linear-gradient(135deg, #9b59b6, #8e44ad);
		}

		.contact-card:hover {
			transform: translateY(-5px);
			box-shadow: 0 15px 30px rgba(0,0,0,0.12);
		}

		.card-header {
			display: flex;
			align-items: center;
			gap: 1rem;
			margin-bottom: 1.5rem;
		}

		.card-icon {
			font-size: 2.5rem;
			background: linear-gradient(135deg, #9b59b6, #8e44ad);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
		}

		.card-title {
			font-size: 1.3rem;
			font-weight: 600;
			color: var(--secondary-color);
			margin: 0;
		}

		.contact-details {
			list-style: none;
			padding: 0;
			margin: 0;
		}

		.contact-details li {
			padding: 0.75rem 0;
			border-bottom: 1px solid #f0f0f0;
			display: flex;
			align-items: center;
			gap: 0.75rem;
		}

		.contact-details li:last-child {
			border-bottom: none;
		}

		.detail-icon {
			font-size: 1.1rem;
			color: #9b59b6;
			width: 20px;
		}

		.detail-text {
			color: var(--text-medium);
			line-height: 1.6;
		}

		.detail-text strong {
			color: var(--secondary-color);
		}

		/* Inquiry Types Section */
		.inquiry-section {
			background: linear-gradient(135deg, #f8f9fa, #e9ecef);
			border-radius: 15px;
			padding: 2rem;
			margin: 2rem 0;
		}

		.inquiry-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 2rem;
			margin-top: 2rem;
		}

		.inquiry-card {
			background: white;
			padding: 2rem;
			border-radius: 15px;
			text-align: center;
			box-shadow: 0 4px 15px rgba(0,0,0,0.05);
			transition: all 0.3s ease;
			border: 2px solid transparent;
		}

		.inquiry-card:hover {
			transform: translateY(-3px);
			box-shadow: 0 10px 25px rgba(0,0,0,0.1);
			border-color: #9b59b6;
		}

		.inquiry-icon {
			font-size: 3rem;
			margin-bottom: 1rem;
			color: #9b59b6;
		}

		.inquiry-title {
			font-size: 1.2rem;
			font-weight: 600;
			color: var(--secondary-color);
			margin-bottom: 1rem;
		}

		.inquiry-description {
			color: var(--text-medium);
			line-height: 1.6;
			margin-bottom: 1.5rem;
		}

		.inquiry-response {
			background: #f8f9fa;
			padding: 1rem;
			border-radius: 10px;
			font-size: 0.9rem;
			color: var(--text-medium);
		}

		/* FAQ Section */
		.faq-section {
			background: white;
			border-radius: 15px;
			padding: 2rem;
			margin: 2rem 0;
			box-shadow: 0 4px 20px rgba(0,0,0,0.08);
		}

		.faq-item {
			border-bottom: 1px solid #f0f0f0;
			padding: 1.5rem 0;
		}

		.faq-item:last-child {
			border-bottom: none;
		}

		.faq-question {
			font-weight: 600;
			color: var(--secondary-color);
			margin-bottom: 0.5rem;
			cursor: pointer;
			display: flex;
			align-items: center;
			gap: 1rem;
		}

		.faq-toggle {
			font-size: 1.2rem;
			color: #9b59b6;
			transition: transform 0.3s ease;
		}

		.faq-question.active .faq-toggle {
			transform: rotate(180deg);
		}

		.faq-answer {
			color: var(--text-medium);
			line-height: 1.6;
			max-height: 0;
			overflow: hidden;
			transition: max-height 0.3s ease, padding 0.3s ease;
		}

		.faq-answer.active {
			max-height: 200px;
			padding-top: 1rem;
		}

		/* Office Hours Section */
		.hours-section {
			background: linear-gradient(135deg, #e8f5e8, #d4edda);
			border-radius: 15px;
			padding: 2rem;
			margin: 2rem 0;
		}

		.hours-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 2rem;
			margin-top: 2rem;
		}

		.hours-card {
			background: white;
			padding: 1.5rem;
			border-radius: 10px;
			text-align: center;
			box-shadow: 0 4px 15px rgba(0,0,0,0.05);
		}

		.hours-icon {
			font-size: 2rem;
			color: #27ae60;
			margin-bottom: 1rem;
		}

		.hours-title {
			font-weight: 600;
			color: var(--secondary-color);
			margin-bottom: 0.5rem;
		}

		.hours-time {
			color: var(--text-medium);
			font-size: 0.9rem;
		}

		/* Social Media Section */
		.social-section {
			background: linear-gradient(135deg, #e3f2fd, #bbdefb);
			border-radius: 15px;
			padding: 2rem;
			margin: 2rem 0;
			text-align: center;
		}

		.social-links {
			display: flex;
			justify-content: center;
			gap: 2rem;
			margin-top: 2rem;
		}

		.social-link {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 0.5rem;
			text-decoration: none;
			color: var(--text-medium);
			transition: all 0.3s ease;
			padding: 1rem;
			border-radius: 10px;
		}

		.social-link:hover {
			transform: translateY(-3px);
			color: var(--secondary-color);
			background: rgba(255,255,255,0.7);
		}

		.social-icon {
			font-size: 2rem;
			color: #2196f3;
		}

		/* Location Section */
		.location-section {
			background: white;
			border-radius: 15px;
			padding: 2rem;
			margin: 2rem 0;
			box-shadow: 0 4px 20px rgba(0,0,0,0.08);
		}

		.location-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 2rem;
			margin-top: 2rem;
		}

		.location-card {
			background: #f8f9fa;
			padding: 2rem;
			border-radius: 15px;
			border-left: 4px solid #9b59b6;
		}

		.location-title {
			font-weight: 600;
			color: var(--secondary-color);
			margin-bottom: 1rem;
			display: flex;
			align-items: center;
			gap: 0.5rem;
		}

		.location-details {
			color: var(--text-medium);
			line-height: 1.6;
		}

		/* Mobile Optimizations */
		@media (max-width: 768px) {
			.contact-hero {
				padding: 2rem 1rem;
				margin: -1.5rem -1.5rem 2rem -1.5rem;
			}

			.hero-contact-methods {
				grid-template-columns: 1fr;
				gap: 1rem;
			}

			.contact-grid {
				grid-template-columns: 1fr;
			}

			.inquiry-grid {
				grid-template-columns: 1fr;
			}

			.hours-grid {
				grid-template-columns: repeat(2, 1fr);
			}

			.social-links {
				flex-direction: column;
				gap: 1rem;
			}

			.location-grid {
				grid-template-columns: 1fr;
			}
		}

		@media (max-width: 480px) {
			.hours-grid {
				grid-template-columns: 1fr;
			}
		}
	</style>



