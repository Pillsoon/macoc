---
const { docId, height = "800px" } = Astro.props;
---

<div class="google-doc-container">
  <iframe
    src={`https://docs.google.com/document/d/${docId}/preview`}
    width="100%"
    height={height}
    style="border: none; border-radius: 8px;"
    loading="lazy"
    title="Google Document"
  ></iframe>
</div>

<style>
  .google-doc-container {
    width: 100%;
    margin: 1rem 0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .google-doc-container iframe {
      height: 600px;
    }
  }
</style> 